- var DOMAIN = "/";
- var BASE_DOMAIN = "/";
- var DIR_ASSETS = BASE_DOMAIN + "assets/";
- var DIR_IMG = DIR_ASSETS + "img/";
- var DIR_IMG_CMN = DIR_ASSETS + "img/common/"; // イメージへのリンク
- var DIR_CSS = DIR_ASSETS + "css/";
- var DIR_JS = DIR_ASSETS + "js/";
block vars
doctype html
html(lang='ja')
	head(prefix='og: http://ogp.me/ns# fb: http://ogp.me/ns/fb# article: http://ogp.me/ns/article#')
		meta(charset='utf-8')
		title #{_title_str}
		// Page Setting
		meta(http-equiv='X-UA-Compatible', content='IE=edge')
		meta(name='description', content='#{_desc_str}')
		meta(name='keywords', content='#{_keys_str}')
		//- // OG
		meta(property="og:title", content="#{_title_str}")
		//- meta(property="og:type", content="website")
		meta(property="og:type", content="article")
		meta(property="og:description", content="#{_desc_str}")
		meta(property="og:url", content="#{DOMAIN}")
		meta(property="og:image", content="#{DIR_IMG_CMN}og_image.jpg")
		meta(name="twitter:card", content="summary_large_image")
		meta(name="twitter:site", content="@")
		meta(name="twitter:title", content="#{_title_str}")
		meta(name="twitter:description", content="#{_desc_str}")
		meta(name="twitter:image", content="#{DIR_IMG_CMN}og_image.jpg")
		// ViewPort Setting
		meta(name='viewport', content='width=device-width,user-scalable=yes')
		//- meta(name='viewport', content='width=device-width,initial-scale=1.0, minimum-scale=1.0, maximum-scale=1.0, user-scalable=yes')
		// Add to homescreen for Chrome on Android
		meta(name='mobile-web-app-capable', content='yes')
		//- // iOS Icon Setting
		link(rel='apple-touch-icon', href='#{DIR_IMG_CMN}apple-touch-icon.png')
		// GEneric icon
		link(rel='shortcut icon', href='/favicon.ico')
		// CSS Setting
		link(href='http://fonts.googleapis.com/css?family=Roboto', rel='stylesheet', type='text/css')
		link(rel='stylesheet', href='#{DIR_CSS}master.css')

		block link

	body(id="#{_page_id}")
		.wrapper
			.wrapper__bg
			//
				==============================================
				ヘッダー
				==============================================
			//
			header.header
				.header__wrapper
					button.header__menubtn(type="button")
					.gnav
						.gnav__inner
							nav.gnav__lists.js-stgSL
								.gnav__item.is-current: a(href="/"): span HOME
								.gnav__item: a(href="#content"): span CONTENT
								.gnav__item: a(href="/about"): span ABOUT
								.gnav__item: a(href="/works"): span WORKS
								.gnav__item: a(href="/contact"): span CONTACT

			//
				==============================================
				コンテンツ
				==============================================
			//
			main.main
				.container
					block body


				.pagetop.js-hover
					.pagetop__inner
						.pagetop__obj
							span PAGE TOP
			//
				==============================================
				フッター
				==============================================
			//
			footer.footer
				.footer__wrapper
					.footer__copylight: small &copy; 2018 Corporation


	//- 全体共通のjs
	script(src='#{DIR_JS}libs.min.js')
	script(src='#{DIR_JS}functions.min.js')
	block script
